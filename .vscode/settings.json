{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build with gcc",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "${workspaceFolder}/main.c",
        "-o",
        "${workspaceFolder}/main"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ],
  "files.associations": {
    "stdlib.h": "c",
    "title.h": "c"
  }
  
}
